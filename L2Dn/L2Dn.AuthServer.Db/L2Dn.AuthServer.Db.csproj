    <ItemGroup>
      <None Update="config.dev.json">
        <CopyToOutputDirectory Condition="'$(Configuration)'=='Debug'">PreserveNewest</CopyToOutputDirectory>
      </None>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\L2Dn.Common\L2Dn.Common.csproj" />
